<%- include('include/header.ejs') %> 
<head>
    <link rel="stylesheet" href="/css/show-movie.css">
</head>
<body>
    <div class="page-header">
        <h2 id="List">Movie List</h2>
    </div>
    <% for(let movie of movieList) {%>
    <div class="container">
            <article class="movie-container">
                <img src="<%= movie.poster_link %> " class="movie-image">
                <div class="movie-name"><%= movie.movie_name %></div>
                <div class="price">Rs.<%= movie.price %> </div>
                <br>
                <div class="details"><%= movie.movie_details.slice(0,50) %>....  </div>
                <br>
                <a href="/show-movie/<%= movie.id %> "><button class="button detail">Details</button></a>
                <a href="/admin/show-movie/delete/<%=movie.id  %> "><button  class="button delete">Delete</button></a>
                <a href="/admin/show-movie/edit/<%= movie.id %> "><button class="button edit">Edit</button></a>
                <form action="/cart/<%= movie.UserId %>" method="POST">
                    <button class="button addToCart" type="submit">Add to Cart</button>
                </form>
            </article>
    </div>
    <% } %>
</body>